<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.alisemiz.akilli_kampus_uygulamasi.ui.auth.LoginFragment"
        android:label="Giriş Yap"
        tools:layout="@layout/fragment_login">

        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />

        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.alisemiz.akilli_kampus_uygulamasi.ui.auth.RegisterFragment"
        android:label="Kayıt Ol"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/registerFragment"
            app:popUpToInclusive="true"/>
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.alisemiz.akilli_kampus_uygulamasi.ui.home.HomeFragment"
        android:label="Olaylar"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_incidentDetailFragment"
            app:destination="@id/incidentDetailFragment" />

        <action
            android:id="@+id/action_homeFragment_to_addIncidentFragment"
            app:destination="@id/addIncidentFragment" />
    </fragment>

    <fragment
        android:id="@+id/mapFragment"
        android:name="com.alisemiz.akilli_kampus_uygulamasi.ui.map.MapFragment"
        android:label="Kampüs Haritası"
        tools:layout="@layout/fragment_map" />

    <fragment
        android:id="@+id/incidentDetailFragment"
        android:name="com.alisemiz.akilli_kampus_uygulamasi.ui.detail.IncidentDetailFragment"
        android:label="Olay Detayı"
        tools:layout="@layout/fragment_incident_detail">
        <argument
            android:name="incidentId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/addIncidentFragment"
        android:name="com.alisemiz.akilli_kampus_uygulamasi.ui.add.AddIncidentFragment"
        android:label="Olay Bildir"
        tools:layout="@layout/fragment_add_incident" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.alisemiz.akilli_kampus_uygulamasi.ui.profile.ProfileFragment"
        android:label="Profil"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.alisemiz.akilli_kampus_uygulamasi.ui.notifications.NotificationsFragment"
        android:label="Takip Ettiklerim"
        tools:layout="@layout/fragment_notifications">

        <action
            android:id="@+id/action_notificationsFragment_to_incidentDetailFragment"
            app:destination="@id/incidentDetailFragment" />
    </fragment>

</navigation>